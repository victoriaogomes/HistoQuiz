<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/darkPurple"
    style="@style/FullscreenTheme"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/fullContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/feedbackPergunta"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pinkchicken"
            android:textSize="@dimen/_15sdp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/resp"/>
        <View
            android:id="@+id/line"
            android:layout_below="@+id/feedbackPergunta"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@color/white"/>
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_below="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/respAdv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pinkchicken"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:text="@string/respAdversario"
                android:layout_alignParentStart="true"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardResp"
                android:layout_alignEnd="@+id/respAdv"
                android:layout_alignParentEnd="true"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:contentPaddingBottom="5dp"
                app:contentPaddingTop="5dp"
                app:contentPaddingLeft="20dp"
                app:contentPaddingRight="20dp"
                app:cardBackgroundColor="@color/red">
                <TextView
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/respOponente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pinkchicken"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:text="@string/nao"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/relative1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical">
            <Button
                style="?android:attr/buttonBarStyle"
                android:id="@+id/adivinharLamina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/pinkchicken"
                android:layout_gravity="end"
                android:textSize="@dimen/_15sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_light_style"
                android:text="@string/adivinhar"/>
            <Button
                style="?android:attr/buttonBarStyle"
                android:id="@+id/proximaRodada"
                android:layout_toEndOf="@+id/adivinharLamina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/pinkchicken"
                android:layout_gravity="end"
                android:textSize="@dimen/_15sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_light_style"
                android:text="@string/proxima"/>
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>