<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.ProfileFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/selectImage"
                android:scaleType="fitCenter"
                app:layout_collapseMode="parallax"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/nome"
                app:layout_collapseParallaxMultiplier="0.7"
                android:background="@drawable/ic_image"
                android:contentDescription="@string/profImg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.27"
                app:layout_constraintWidth_percent="0.35"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nome"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/selectImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/email"
                app:startIconDrawable="@drawable/ic_pen"
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Rounded"
                android:hint="@string/nome"
                android:textSize="@dimen/_30sdp"
                android:textColorHint="@color/grey"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:background="@drawable/text_edit_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pinkchicken"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:hint="@string/textBoxHint"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/nome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/senha"
                app:startIconDrawable="@drawable/ic_arroba"
                app:errorEnabled="true"
                android:hint="@string/email"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Rounded"
                android:textColorHint="@color/grey"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pinkchicken"
                    android:hint="@string/textBoxHint"
                    android:background="@drawable/text_edit_style"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/senha"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Rounded"
                android:hint="@string/senha"
                app:layout_constraintTop_toBottomOf="@+id/email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/universidade"
                android:textColorHint="@color/grey"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/ic_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:background="@drawable/text_edit_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pinkchicken"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:hint="@string/textBoxHint"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/universidade"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/senha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/anoIngresso"
                app:startIconDrawable="@drawable/ic_graduation_cap"
                android:hint="@string/universidade"
                app:errorEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Rounded"
                android:textColorHint="@color/grey"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:background="@drawable/text_edit_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="@font/pinkchicken"
                    android:textColor="@color/black"
                    android:hint="@string/textBoxHint"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/anoIngresso"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/universidade"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/salvarButton"
                android:hint="@string/anoIngresso"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Rounded"
                android:textColorHint="@color/grey"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/ic_calendar"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:background="@drawable/text_edit_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pinkchicken"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/black"
                    android:hint="@string/textBoxHint"
                    android:inputType="date"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                style="?android:attr/buttonBarStyle"
                android:id="@+id/salvarButton"
                app:layout_constraintTop_toBottomOf="@+id/anoIngresso"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/pinkchicken"
                android:textSize="@dimen/_18sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_dark_style"
                android:text="@string/salvar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ProgressBar
            android:id="@+id/progress"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</ScrollView>