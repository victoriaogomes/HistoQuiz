<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.LocalGameActivity">
    <LinearLayout
        android:id="@+id/fullContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/panelPurple"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/numRodada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pinkchicken"
                        android:text="@string/rodada"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:id="@+id/codSala"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pinkchicken"
                        android:text="CÃ³d. da sala: ??????"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:background="@color/white" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/darkPurple"
                    app:cardCornerRadius="8dp"
                    app:contentPadding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingEnd="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_flag"
                            android:contentDescription="flag" />
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pinkchicken"
                            android:text="@string/team1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />
                        <TextView
                            android:id="@+id/pontuacaoSeuTime"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/pinkchicken"
                            android:gravity="end"
                            android:text="@string/pontuacaoInicial"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/darkPurple"
                    app:cardCornerRadius="8dp"
                    app:contentPadding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_flag"
                            android:contentDescription="flag" />
                        <TextView
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pinkchicken"
                            android:text="@string/team2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />
                        <TextView
                            android:id="@+id/pontuacaoTimeOponente"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/pinkchicken"
                            android:gravity="end"
                            android:text="@string/pontuacaoInicial"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/timer"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo para realizar uma jogada: 00:00"
            android:fontFamily="@font/pinkchicken"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical">
                <Button
                    android:id="@+id/toggleLamina"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hideLamina"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/pinkchicken"
                    android:background="@drawable/button_light_style" />
                <ImageView
                    android:id="@+id/centro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:alpha="0.8"
                    android:background="@drawable/ic_ball"
                    android:contentDescription="@string/centro"
                    android:orientation="vertical"
                    android:paddingStart="60dp"
                    android:paddingLeft="60dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="60dp"
                    android:paddingRight="60dp"
                    android:paddingBottom="10dp" />
                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="12dp"
                    android:id="@+id/linearLayout1"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">
                    <ImageButton
                        android:id="@+id/anteriorButton"
                        android:src="@drawable/ic_chevron_left"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/pinkchicken"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical|end"
                        android:layout_gravity="center_vertical|end"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/prox">
                    </ImageButton>
                    <ImageSwitcher
                        android:id="@+id/imageSW"
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="95"
                        android:layout_gravity="center_vertical|start"
                        android:gravity="center_vertical|start"
                        android:layout_height="wrap_content"/>
                    <ImageButton
                        android:id="@+id/proximoButton"
                        android:src="@drawable/ic_next"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/pinkchicken"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical|end"
                        android:layout_gravity="center_vertical|end"
                        android:textAllCaps="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/prox">
                    </ImageButton>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom|center_horizontal"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/dica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/dica"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/pinkchicken"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/button_light_style" />
                    <Button
                        android:id="@+id/finalizarJogo"
                        android:layout_marginStart="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/finalizar"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/pinkchicken"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/button_light_style"
                        />
                </LinearLayout>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:visibility="gone"
                    android:id="@+id/escolherPergunta"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_list_alt"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/escolherPerg">
                </ImageButton>
                <ImageButton
                    android:id="@+id/guessSlide"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/escolherPergunta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_question"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/adivinharLamina">
                </ImageButton>
            </RelativeLayout>
            <TextView
                android:id="@+id/roundFeedback"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback da partida ffffff"
                android:fontFamily="@font/pinkchicken"
                android:textSize="@dimen/_15sdp"
                android:background="@color/purple"
                android:padding="10dp"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>