<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SignUpActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/fullContent"
        app:cardBackgroundColor="@color/panelPurple"
        app:cardCornerRadius="15dp"
        android:alpha="0.95"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent"
        android:background="@color/panelPurple">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <ImageView
                        android:id="@+id/userPhotoIMGVW"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.7"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_image"
                        android:contentDescription="@string/profImg" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameEDT"
                        app:layout_constraintTop_toBottomOf="@+id/userPhotoIMGVW"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_pen"
                        android:layout_width="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Rounded"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        app:startIconTint="@color/darkPurple"
                        android:hint="@string/nome"
                        android:textColorHint="@color/grey"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pinkchicken"
                            android:textSize="@dimen/_17sdp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_edit_style"
                            android:hint="@string/textBoxHint"
                            android:inputType="textPersonName"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailEDT"
                        app:layout_constraintTop_toBottomOf="@+id/nameEDT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:paddingTop="5dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Rounded"
                        android:paddingBottom="5dp"
                        android:layout_marginStart="5dp"
                        app:startIconDrawable="@drawable/ic_arroba"
                        android:layout_marginEnd="5dp"
                        app:startIconTint="@color/darkPurple"
                        app:errorEnabled="true"
                        android:hint="@string/email"
                        android:textColorHint="@color/grey"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pinkchicken"
                            android:textSize="@dimen/_17sdp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_edit_style"
                            android:hint="@string/textBoxHint"
                            android:inputType="textEmailAddress"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordEDT"
                        app:layout_constraintTop_toBottomOf="@+id/emailEDT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:passwordToggleEnabled="true"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:hint="@string/senha"
                        app:startIconTint="@color/darkPurple"
                        android:textColorHint="@color/grey"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Rounded"
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:background="@drawable/text_edit_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pinkchicken"
                            android:textSize="@dimen/_17sdp"
                            android:hint="@string/textBoxHint"
                            android:inputType="textPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/collegeEDT"
                        app:layout_constraintTop_toBottomOf="@+id/passwordEDT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginStart="5dp"
                        app:startIconTint="@color/darkPurple"
                        android:layout_marginEnd="5dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Rounded"
                        app:startIconDrawable="@drawable/ic_graduation_cap"
                        android:hint="@string/universidade"
                        app:errorEnabled="true"
                        android:textColorHint="@color/grey"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pinkchicken"
                            android:textSize="@dimen/_17sdp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_edit_style"
                            android:hint="@string/textBoxHint"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/entryYearEDT"
                        app:layout_constraintTop_toBottomOf="@+id/collegeEDT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        app:startIconTint="@color/darkPurple"
                        android:layout_marginStart="5dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Rounded"
                        android:layout_marginEnd="5dp"
                        android:hint="@string/anoIngresso"
                        android:textColorHint="@color/grey"
                        app:errorEnabled="true"
                        app:startIconDrawable="@drawable/ic_calendar"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pinkchicken"
                            android:textSize="@dimen/_17sdp"
                            android:textColor="@color/black"
                            android:background="@drawable/text_edit_style"
                            android:hint="@string/textBoxHint"
                            android:inputType="date"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/useTermsTXT"
                        app:layout_constraintTop_toBottomOf="@+id/entryYearEDT"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/link"
                        android:textSize="@dimen/_14sdp"
                        android:text="@string/acessoTermos"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"/>
                    <CheckBox
                        android:id="@+id/checkbox1"
                        app:layout_constraintTop_toBottomOf="@+id/useTermsTXT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textTermo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textTermo1"
                        app:layout_constraintStart_toEndOf="@+id/checkbox1"
                        app:layout_constraintTop_toBottomOf="@+id/useTermsTXT"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:justificationMode="inter_word"
                        android:textSize="@dimen/_13sdp"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="@string/termoUso1"/>
                    <CheckBox
                        android:id="@+id/checkbox2"
                        app:layout_constraintTop_toBottomOf="@+id/textTermo1"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textTermo2"
                        app:layout_constraintStart_toEndOf="@+id/checkbox2"
                        app:layout_constraintTop_toBottomOf="@+id/textTermo1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:justificationMode="inter_word"
                        android:textSize="@dimen/_13sdp"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="@string/termoUso2"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        style="?android:attr/buttonBarStyle"
                        app:layout_constraintTop_toBottomOf="@+id/textTermo2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/goBackBTN"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/signUpBTN"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/pinkchicken"
                        android:textSize="@dimen/_17sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/button_dark_style"
                        android:text="@string/cadastrar"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        style="?android:attr/buttonBarStyle"
                        app:layout_constraintStart_toEndOf="@+id/signUpBTN"
                        app:layout_constraintTop_toBottomOf="@+id/textTermo2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/goBackBTN"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/pinkchicken"
                        android:textSize="@dimen/_17sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:background="@drawable/button_dark_style"
                        android:text="@string/voltar">
                    </Button>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>